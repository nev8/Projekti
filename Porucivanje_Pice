package javaprojekat;

import java.util.Scanner;

public class Porucivanjepice {

	public static void main(String[] args) {
		
		Scanner sc=new Scanner(System.in);
		
		int capricoza=2*3*5;
		int peperoni=2*7;
		int vesuvio=7*5*3;
		
		int idk=2;
		int ids=3;
		int idp=5;
		int idc=7;
		
		int k=50;
		int s=40;
		int p=30;
		int c=40;
		
		int sum=200;
                int pica=1;
		
		
		System.out.println("Dobrodosli u Brasko++ servis za narucivanje!");
		System.out.println("Koliko sastojaka zelite?");
		int l=sc.nextInt();
		int i=1;
		System.out.println("Koji sastojak zelite?");
		while(i<=l) {
			int b=sc.nextInt();
			if(b==idk) {sum=sum+k; pica=pica*idk;}
			else if(b==ids) {sum=sum+s;pica=pica*ids;}
			else if(b==idp) {sum=sum+p;pica=pica*idp;}
			else if(b==idc) {sum=sum+c;pica=pica*idc;}
			else {System.err.println("Greska, zeljeni sastojak ne postoji u bazi podataka.Pokusajte ponovo.");continue;}
			i=i+1;}
		
		if(pica==peperoni)System.out.println("Izabrali ste Peperoni. Vasa pica je "+sum+" dinara.");
		else if(pica==capricoza)System.out.println("Izabrali ste Capricozu. Vasa pica je "+sum+" dinara.");
		else if(pica==vesuvio)System.out.println("Izabrali ste Vesuvio. Vasa pica je "+sum+" dinara.");
		else System.out.println("Izabrali ste kombinaciju. Vasa pica je "+sum+" dinara.");
	}

}
